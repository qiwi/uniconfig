{
  "workspaces": [
    "packages/*"
  ],
  "version": "1.7.0",
  "private": true,
  "esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "clean": "lerna clean --yes && lerna run --stream clean",
    "build": "lerna run --stream build",
    "build_es6": "lerna run --stream build_es6",
    "build_es5": "lerna run --stream build_es5",
    "build:clean": "yarn clean && yarn run build",
    "bootstrap": "lerna bootstrap",
    "test": "yarn lint && yarn jest",
    "test_with_report": "yarn test && yarn codeclimate_push && yarn coveralls_push",
    "codeclimate_push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "jest": "NODE_ENV=test BAZ=baz jest --no-cache -w 1 --detectOpenHandles --config jest.config.json",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "docs": "docma -c ./docma.json",
    "show_docs": "node scripts/docsapp.js"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "7.0.13",
    "@semantic-release/github": "5.4.0",
    "@semantic-release/npm": "5.1.9",
    "@semantic-release/release-notes-generator": "7.2.0",
    "@types/node": "^12.0.10",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.4",
    "docma": "^3.2.2",
    "jest": "24.8.0",
    "lerna": "^3.15.0",
    "parcel": "1.12.3",
    "parcel-bundler": "^1.12.3",
    "semantic-release": "15.13.16",
    "semantic-release-monorepo": "6.1.1",
    "semantic-release-monorepo-hooks": "2.9.3",
    "semantic-release-plugin-decorators": "^2.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-qiwi": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/uniconfig.git"
  }
}
