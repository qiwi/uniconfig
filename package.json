{
  "workspaces": [
    "packages/*"
  ],
  "version": "1.7.0",
  "private": true,
  "esm": {
    "mode": "all",
    "cjs": true
  },
  "scripts": {
    "clean": "lerna clean --yes && lerna run --stream clean",
    "build": "lerna run --stream build",
    "build:es6": "lerna run --stream build:es6",
    "build:es5": "lerna run --stream build:es5",
    "build:clean": "yarn clean && yarn run build",
    "bootstrap": "lerna bootstrap",
    "test": "yarn lint && yarn jest",
    "test:report": "yarn test && yarn codeclimate:push && yarn coveralls:push",
    "codeclimate:push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "jest": "NODE_ENV=test BAZ=baz jest --no-cache -w 1 --detectOpenHandles --config jest.config.json ",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "rebuild": "yarn && yarn bootstrap && yarn build && yarn test",
    "docs": "docma -c ./docma.json",
    "show:docs": "node scripts/js/docsapp.js",
    "postupdate": "yarn && yarn bootstrap && yarn build && yarn test"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.5",
    "@semantic-release/commit-analyzer": "^6.3.2",
    "@semantic-release/git": "7.0.17",
    "@semantic-release/github": "5.5.5",
    "@semantic-release/npm": "5.3.2",
    "@semantic-release/release-notes-generator": "7.3.2",
    "@types/node": "^12.12.5",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.7",
    "docma": "^3.2.2",
    "jest": "24.9.0",
    "lerna": "^3.18.3",
    "parcel": "1.12.4",
    "parcel-bundler": "^1.12.4",
    "semantic-release": "15.13.29",
    "semantic-release-monorepo": "6.1.1",
    "semantic-release-monorepo-hooks": "2.9.5",
    "semantic-release-plugin-decorators": "^2.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-qiwi": "^1.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/uniconfig.git"
  }
}
